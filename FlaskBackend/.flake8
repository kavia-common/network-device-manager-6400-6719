[flake8]
# Exclude common virtualenv and third-party directories from linting to avoid unrelated errors
exclude =
    .venv,
    venv,
    env,
    .env,
    node_modules,
    interfaces,
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    .local,
    .cache,
    .pip,
    .pythonlibs,
    .idea,
    .vscode,
    build,
    dist,
    site-packages,
    */site-packages/*

# Match project style
max-line-length = 120
extend-ignore =
    # allow unused variables in test fixtures etc.
    F401,
    # sometimes clashes in third-party typing stubs; we already exclude but keep safe
    F403,
    F405
